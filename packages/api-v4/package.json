{
  "name": "@linode/api-v4",
  "version": "0.73.0",
  "homepage": "https://github.com/linode/manager/tree/develop/packages/api-v4",
  "bugs": {
    "url": "https://github.com/linode/manager/issues"
  },
  "repository": {
    "type": "git",
    "directory": "https://github.com/linode/manager/tree/develop/packages/api-v4"
  },
  "engines": {
    "node": ">= 14.17.4"
  },
  "description": "JavaScript wrapper around the Linode APIv4",
  "author": "Linode",
  "license": "Apache-2.0",
  "private": false,
  "main": "./lib/index.js",
  "browser": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "unpkg": "./lib/index.js",
  "dependencies": {
    "@linode/validation": "0.11.1",
    "@types/yup": "^0.29.13",
    "axios": "~0.21.4",
    "ipaddr.js": "^2.0.0",
    "querystring": "^0.2.0",
    "yup": "^0.32.9"
  },
  "scripts": {
    "start": "concurrently --raw \"tsc -w --preserveWatchOutput\" \"esbuild src/*.ts src/**/index.ts --outdir=lib --watch --target=\"es6\" --format=\"cjs\" \"",
    "build": "concurrently --raw \"tsc\" \"esbuild src/*.ts src/**/*.ts --outdir=lib --target=\"es6\" --format=\"cjs\" --minify \"",
    "build:node": "yarn build",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "yarn run eslint . --quiet --ext .js,.ts,.tsx",
    "typecheck": "tsc --noEmit true --emitDeclarationOnly false",
    "precommit": "lint-staged"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "esbuild-jest": "^0.5.0",
    "@types/jest": "^26.0.13",
    "@types/node": "^12.7.1",
    "axios-mock-adapter": "^1.18.1",
    "concurrently": "^4.1.1",
    "esbuild": "^0.14.30",
    "eslint": "^6.8.0",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "jest": "~26.4.2",
    "lint-staged": "^9.4.2",
    "prettier": "~2.2.1"
  },
  "resolutions": {
    "handlebars": "^4.4.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --ext .js,.ts,.tsx",
      "git add"
    ],
    ".{ts,tsx}": [
      "tsc -p tsconfig.json --noEmit true --emitDeclarationOnly false"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(t)sx?$": "esbuild-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
