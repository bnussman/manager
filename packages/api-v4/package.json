{
  "name": "@linode/api-v4",
  "version": "0.75.0",
  "homepage": "https://github.com/linode/manager/tree/develop/packages/api-v4",
  "bugs": {
    "url": "https://github.com/linode/manager/issues"
  },
  "repository": {
    "type": "git",
    "directory": "https://github.com/linode/manager/tree/develop/packages/api-v4"
  },
  "engines": {
    "node": ">= 14.17.4"
  },
  "description": "JavaScript wrapper around the Linode APIv4",
  "author": "Linode",
  "license": "Apache-2.0",
  "private": false,
  "main": "./index.node.js",
  "browser": "./index.js",
  "types": "./lib/index.d.ts",
  "unpkg": "./index.js",
  "dependencies": {
    "@linode/validation": "0.12.0",
    "@types/yup": "^0.29.13",
    "axios": "~0.21.4",
    "ipaddr.js": "^2.0.0",
    "querystring": "^0.2.0",
    "yup": "^0.32.9"
  },
  "scripts": {
    "start": "concurrently --raw \"tsc -w --preserveWatchOutput\" \"swc src --watch --out-dir lib\"",
    "build": "tsc && swc src --out-dir lib && webpack",
    "build:node": "yarn build --config webpack.node.config.js",
    "test": "jest --config jestconfig.json",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "yarn run eslint . --quiet --ext .js,.ts,.tsx",
    "typecheck": "tsc --noEmit true --emitDeclarationOnly false",
    "precommit": "lint-staged"
  },
  "files": [
    "index.js",
    "index.node.js",
    "index.d.ts",
    "lib/*",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.215",
    "@types/jest": "^26.0.13",
    "@types/node": "^12.7.1",
    "axios-mock-adapter": "^1.18.1",
    "concurrently": "^4.1.1",
    "eslint": "^6.8.0",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "jest": "~26.4.2",
    "lint-staged": "^9.4.2",
    "npm-dts-webpack-plugin": "^1.3.10",
    "prettier": "~2.2.1",
    "ts-jest": "^24.1.0",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  },
  "resolutions": {
    "handlebars": "^4.4.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --ext .js,.ts,.tsx",
      "git add"
    ],
    ".{ts,tsx}": [
      "tsc -p tsconfig.json --noEmit true --emitDeclarationOnly false"
    ]
  }
}
