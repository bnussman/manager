{
  "compilerOptions": {
    "target": "esnext",
    "module": "umd",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck":true,
    "strict": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "declarationMap": true,
    "composite": true,
    "rootDir": "src"
  },
  "references": [{ "path": "../validation" }],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/__tests__/*"
  ]
}