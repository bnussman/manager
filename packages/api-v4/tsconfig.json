{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "declarationMap": true,
    "rootDir": "."
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/__tests__/*"
  ]
}