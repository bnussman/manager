{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "jsx": "react",
    "outDir": "build/dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "sourceMap": true,
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "cypress",
    "config",
    "build",
    "e2e",
    "scripts",
    "jest"
  ]
}
