{
  "name": "@linode/validation",
  "version": "0.8.0",
  "description": "Yup validation schemas for use with the Linode APIv4",
  "main": "dist/validation.umd.js",
  "unpkg": "dist/validation.iife.js",
  "jsdelivr": "dist/validation.iife.js",
  "module": "dist/validation.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/validation.es.js",
      "require": "./dist/validation.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "yarn start",
    "build": "vite build && tsc --emitDeclarationOnly && mv dist/src dist/types",
    "start": "concurrently --raw \"tsc -w --preserveWatchOutput\" \"vite --clearScreen false\"",
    "test": "jest --config jestconfig.json",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "yarn run eslint . --quiet --ext .js,.ts,.tsx",
    "typecheck": "tsc --noEmit true --emitDeclarationOnly false",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linode/manager/tree/develop/packages/validation"
  },
  "dependencies": {
    "@types/yup": "^0.29.13",
    "ipaddr.js": "^2.0.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^12.7.1",
    "concurrently": "^4.1.1",
    "eslint": "^6.8.0",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "jest": "~26.4.2",
    "lint-staged": "^9.4.2",
    "prettier": "~2.2.1",
    "ts-jest": "^24.1.0",
    "vite": "^2.8.6"
  },
  "keywords": [
    "linode",
    "api",
    "validation"
  ],
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --ext .js,.ts,.tsx",
      "git add"
    ],
    ".{ts,tsx}": [
      "tsc -p tsconfig.json --noEmit true --emitDeclarationOnly false"
    ]
  },
  "author": "Linode LLC",
  "license": "Apache-2.0"
}
