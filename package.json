{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "devDependencies": {
    "concurrently": "^4.1.1",
    "husky": "^3.1.0",
    "patch-package": "^6.4.7",
    "postinstall": "^0.6.0",
    "typescript": "~4.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm workspaces run precommit"
    }
  },
  "scripts": {
    "lint": "pnpm run eslint . --quiet --ext .js,.ts,.tsx",
    "install:all": "pnpm install --frozen-lockfile",
    "upgrade:sdk": "pnpm workspace @linode/api-v4 version --no-git-tag-version --no-commit-hooks && pnpm workspace linode-manager upgrade @linode/api-v4",
    "postinstall": "pnpm run postinstall --filter linode-manager && patch-package",
    "build:sdk": "pnpm run build --filter @linode/api-v4",
    "build:validation": "pnpm run build --filter @linode/validation",
    "build": "pnpm build:validation && pnpm build:sdk && pnpm run build --filter linode-manager",
    "dev": "pnpm install:all && pnpm build:validation && pnpm build:sdk && pnpm start:all",
    "start:all": "concurrently -n api-v4,manager -c blue,green \"pnpm run start --filter @linode/api-v4\" \"pnpm run start --filter linode-manager\"",
    "clean": "rm -rf node_modules && rm -rf packages/@linode/api-v4/node_modules && rm -rf packages/manager/node_modules && rm -rf packages/@linode/validation/node_modules",
    "test": "pnpm run --filter linode-manager --maxWorkers=4",
    "storybook": "pnpm workspace linode-manager storybook",
    "storybook:e2e": "pnpm workspace linode-manager storybook:e2e",
    "storybook:debug": "pnpm storybook:e2e --color --debug",
    "cy:run": "pnpm run cy:run linode-manager",
    "cy:e2e": "pnpm run cy:e2e --filter linode-manager",
    "cy:debug": "pnpm run cy:debug --filter linode-manager",
    "cy:rec-snap": "pnpm run cy:rec-snap --filter linode-manager"
  },
  "resolutions": {
    "handlebars": "^4.4.3",
    "minimist": "^1.2.3",
    "yargs-parser": "^18.1.3",
    "kind-of": "^6.0.3",
    "dot-prop": "^5.2.0",
    "property-expr": "^2.0.3",
    "csv-parse": "^4.6.3",
    "node-fetch": "^2.6.1",
    "bl": "^3.0.1",
    "y18n": "^4.0.0",
    "ua-parser-js": "^0.7.23",
    "trim": "^0.0.3",
    "prismjs": "^1.24.0",
    "immer": "^9.0.6",
    "lodash": "^4.17.21",
    "glob-parent": "^5.1.2",
    "browserslist": "^4.16.5"
  },
  "version": "0.0.0"
}
